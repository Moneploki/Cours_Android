<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/Text_hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHighlight="@color/colorPrimary"
        android:textSize="180px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/button_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_btn"
        app:layout_constraintTop_toBottomOf="@+id/Text_hello_world"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clement_image"
        android:src="@drawable/puissance"
        app:layout_constraintTop_toBottomOf="@id/button_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        />
    <ImageView
        android:id="@+id/image_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_settings_black_24dp"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/linkdin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linkdin_clement"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/clement_image"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adresse"
        android:text="Chez ClÃ©ment"
        app:layout_constraintStart_toEndOf="@id/linkdin"
        app:layout_constraintTop_toBottomOf="@id/clement_image"
        android:textSize="25dp"
        android:layout_margin="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/image_clement_mignon"
        android:src="@drawable/clement_mignon"
        app:layout_constraintTop_toBottomOf="@+id/adresse"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>